---
const projects = [
  {
    title: "E-commerce Platform",
    description: "A full-featured e-commerce platform with product management, shopping cart, and payment processing capabilities.",
    tags: ["React", "Node.js", "MongoDB", "Stripe", "AWS"],
    liveLink: "https://ecommerce-demo.com",
    codeLink: "https://github.com/julianpinedayyz/ecommerce-platform",
    image: "https://via.placeholder.com/640x360.png?text=E-commerce+Platform"
  },
  {
    title: "Task Management App",
    description: "A collaborative task management application with real-time updates, drag-and-drop interface, and team collaboration features.",
    tags: ["React", "Firebase", "Material UI", "Redux", "TypeScript"],
    liveLink: "https://taskmanager-demo.com",
    codeLink: "https://github.com/julianpinedayyz/task-manager",
    image: "https://via.placeholder.com/640x360.png?text=Task+Manager"
  },
  {
    title: "Weather Dashboard",
    description: "A weather forecast dashboard that provides real-time weather information and forecasts for multiple locations.",
    tags: ["JavaScript", "OpenWeather API", "Chart.js", "HTML5", "CSS3"],
    liveLink: "https://weather-dash.com",
    codeLink: "https://github.com/julianpinedayyz/weather-dashboard",
    image: "https://via.placeholder.com/640x360.png?text=Weather+Dashboard"
  },
  {
    title: "Fitness Tracker",
    description: "An application for tracking workouts, setting fitness goals, and monitoring progress with data visualization.",
    tags: ["React Native", "Express", "MongoDB", "D3.js", "JWT"],
    liveLink: "https://fitness-tracker-demo.com",
    codeLink: "https://github.com/julianpinedayyz/fitness-tracker",
    image: "https://via.placeholder.com/640x360.png?text=Fitness+Tracker"
  },
  {
    title: "Recipe Finder",
    description: "A recipe search application that allows users to find recipes based on ingredients, dietary restrictions, and cuisine type.",
    tags: ["React", "Spoonacular API", "Tailwind CSS", "Context API"],
    liveLink: "https://recipe-finder-demo.com",
    codeLink: "https://github.com/julianpinedayyz/recipe-finder",
    image: "https://via.placeholder.com/640x360.png?text=Recipe+Finder"
  },
  {
    title: "Real Estate Listings",
    description: "A real estate platform for property listings with advanced search, filtering, and an interactive map view.",
    tags: ["Next.js", "PostgreSQL", "Google Maps API", "Vercel"],
    liveLink: "https://realestate-demo.com",
    codeLink: "https://github.com/julianpinedayyz/real-estate-listings",
    image: "https://via.placeholder.com/640x360.png?text=Real+Estate+Listings"
  }
];

const featuredProjects = projects.slice(0, 3);
const otherProjects = projects.slice(3);
---

<section id="projects" class="py-20 bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto px-4">
    <h2 class="section-title text-gray-900 dark:text-white mb-12">Projects I've Built</h2>
    
    <!-- Featured Projects -->
    <div class="space-y-20 mb-16">
      {featuredProjects.map((project, index) => (
        <div class={`flex flex-col ${index % 2 === 0 ? 'lg:flex-row' : 'lg:flex-row-reverse'} gap-8 items-center`}>
          <div class="w-full lg:w-3/5 relative group">
            <a href={project.liveLink} target="_blank" rel="noopener noreferrer" class="block">
              <div class="absolute inset-0 bg-blue-600/80 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                <span class="text-white font-medium">View Project</span>
              </div>
              <img 
                src={project.image} 
                alt={project.title} 
                class="w-full h-auto rounded-lg shadow-md"
              />
            </a>
          </div>
          
          <div class="w-full lg:w-2/5 flex flex-col">
            <p class="text-blue-600 dark:text-blue-400 font-mono mb-1">Featured Project</p>
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">{project.title}</h3>
            
            <div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md mb-4">
              <p class="text-gray-600 dark:text-gray-300">{project.description}</p>
            </div>
            
            <div class="flex flex-wrap gap-2 mb-6">
              {project.tags.map((tag) => (
                <span class="px-3 py-1 text-sm text-gray-600 dark:text-gray-300 bg-gray-200 dark:bg-gray-600 rounded-full">
                  {tag}
                </span>
              ))}
            </div>
            
            <div class="flex gap-4">
              <a href={project.codeLink} target="_blank" rel="noopener noreferrer" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors" aria-label="GitHub Repository">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
                </svg>
              </a>
              <a href={project.liveLink} target="_blank" rel="noopener noreferrer" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors" aria-label="Live Project">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                  <polyline points="15 3 21 3 21 9"></polyline>
                  <line x1="10" y1="14" x2="21" y2="3"></line>
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Other Projects Table (Brittany Chiang style) -->
    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">Other Noteworthy Projects</h3>
    
    <div class="overflow-hidden border border-gray-200 dark:border-gray-700 rounded-lg">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-100 dark:bg-gray-700">
          <tr>
            <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Year</th>
            <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Title</th>
            <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider hidden md:table-cell">Made at</th>
            <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider hidden lg:table-cell">Built with</th>
            <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Link</th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
          {otherProjects.map((project, index) => (
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">2023</td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900 dark:text-white">{project.title}</div>
                <div class="text-sm text-gray-500 dark:text-gray-400 md:hidden mt-1 max-w-xs truncate">{project.description}</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400 hidden md:table-cell">Personal Project</td>
              <td class="px-6 py-4 whitespace-nowrap hidden lg:table-cell">
                <div class="flex flex-wrap gap-2">
                  {project.tags.slice(0, 3).map((tag) => (
                    <span class="px-2 py-1 text-xs text-blue-600 dark:text-blue-400 bg-blue-100 dark:bg-blue-900/30 rounded-full">
                      {tag}
                    </span>
                  ))}
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <div class="flex gap-4">
                  <a href={project.codeLink} target="_blank" rel="noopener noreferrer" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors" aria-label="GitHub Repository">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
                    </svg>
                  </a>
                  <a href={project.liveLink} target="_blank" rel="noopener noreferrer" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors" aria-label="Live Project">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                      <polyline points="15 3 21 3 21 9"></polyline>
                      <line x1="10" y1="14" x2="21" y2="3"></line>
                    </svg>
                  </a>
                </div>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>
</section>