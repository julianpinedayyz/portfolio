<section id="experience" class="py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-12 text-gray-900">Experience</h2>

    <div class="space-y-12">
      {experiences.map((job, index) => (
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
            <div>
              <h3 class="text-xl font-bold text-gray-900">{job.role}</h3>
              <p class="text-gray-700 font-medium">{job.company}</p>
            </div>
            <p class="text-gray-500 mt-2 md:mt-0">{job.period}</p>
          </div>

          <ul class="space-y-3 mb-6">
            {job.description.map((item) => (
              <li class="flex items-start gap-2 text-gray-600">
                <span class="text-gray-900 mt-1">â€¢</span>
                <span>{item}</span>
              </li>
            ))}
          </ul>

          <div class="flex flex-wrap gap-2">
            {job.technologies.map((tech) => (
              <span class="px-3 py-1 text-sm text-gray-600 bg-gray-100 rounded-full">
                {tech}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>