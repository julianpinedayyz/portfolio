<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButton = document.getElementById('toggleSandbox');
    const sandbox = toggleButton.closest('section');

    toggleButton.addEventListener('click', () => {
      if (sandbox.classList.contains('hidden')) {
        sandbox.classList.remove('hidden');
        toggleButton.textContent = 'Hide Sandbox';
      } else {
        sandbox.classList.add('hidden');
        toggleButton.textContent = 'Show Sandbox';
      }
    });
  });
</script>
