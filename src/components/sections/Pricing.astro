---
const pricingPlans = [
  {
    title: 'Consulting',
    description:
      'Strategic technology advisory services tailored to your needs.',
    price: '$200',
    billingPeriod: 'per hour',
    features: [
      'Strategic planning sessions',
      'Technology assessment & roadmapping',
      'Vendor selection guidance',
      'Architecture review',
      'Digital transformation strategy',
    ],
    cta: 'Book a consultation',
    ctaLink: '#contact',
    popular: false,
  },
  {
    title: 'Project-Based',
    description: 'Comprehensive project management and technical leadership.',
    price: 'Custom',
    billingPeriod: 'project-based',
    features: [
      'End-to-end project management',
      'Technical team leadership',
      'Development oversight',
      'Regular progress reporting',
      'Post-launch support',
    ],
    cta: 'Discuss your project',
    ctaLink: '#contact',
    popular: true,
  },
  {
    title: 'Retainer',
    description:
      'Ongoing expertise and support for your technical initiatives.',
    price: 'From $5,000',
    billingPeriod: 'per month',
    features: [
      'Dedicated advisory hours',
      'Priority response time',
      'Monthly strategy sessions',
      'Regular technical reviews',
      'Team mentorship & guidance',
    ],
    cta: 'Explore retainer options',
    ctaLink: '#contact',
    popular: false,
  },
];
---

<section id="pricing" class="py-24">
  <div class="site-container">
    <h2 class="text-4xl font-bold tracking-tight mb-8 text-gray-900">
      Engagement Options
    </h2>

    <p class="text-gray-600 mb-20 max-w-3xl">
      I offer flexible engagement models to meet your specific needs, from
      strategic consulting to comprehensive project management.
    </p>

    <div class="grid md:grid-cols-3 gap-8">
      {
        pricingPlans.map((plan) => (
          <div class="border border-gray-200 bg-white rounded-[4px] p-8 transition-transform hover:scale-105 hover:shadow-xl">
            <h3 class="text-xl font-bold tracking-tight text-gray-900 mb-2">
              {plan.title}
            </h3>

            <p class="text-sm text-purple-400 mb-6">{plan.description}</p>

            <p class="text-2xl font-bold tracking-tight text-gray-900 mb-6">
              {plan.price}{' '}
              <span class="text-sm font-normal text-gray-500">
                {plan.billingPeriod}
              </span>
            </p>

            <div class="h-px w-full bg-gray-200 mb-6" />

            <p class="text-gray-600 mb-6">
              {plan.popular ? (
                <span class="inline-block px-3 py-1 text-xs bg-lime-400 text-gray-900 rounded-full mb-4">
                  Most Popular
                </span>
              ) : (
                ''
              )}
            </p>

            <ul class="space-y-3 mb-8">
              {plan.features.map((feature) => (
                <li class="flex items-start">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5 text-lime-400 flex-shrink-0 mt-0.5"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  <span class="text-gray-600 text-sm ml-2">{feature}</span>
                </li>
              ))}
            </ul>

            <a
              href={plan.ctaLink}
              class="inline-flex items-center text-gray-900 hover:text-purple-400 transition-colors"
            >
              {plan.cta} →
            </a>
          </div>
        ))
      }
    </div>

    <div class="mt-20 max-w-3xl mx-auto text-center">
      <h3 class="text-2xl font-bold tracking-tight text-gray-900 mb-4">
        Custom Solutions Available
      </h3>
      <p class="text-gray-600 mb-8">
        Don't see a plan that fits your needs? Contact me to discuss a custom
        engagement tailored specifically to your organization's requirements.
      </p>
      <a
        href="#contact"
        class="inline-flex items-center text-gray-900 hover:text-purple-400 transition-colors"
      >
        Start the conversation →
      </a>
    </div>
  </div>
</section>
