<section id="contact" class="py-24 bg-gray-50 dark:bg-charcoal-800">
  <div class="site-container">
    <h2
      class="text-4xl font-bold tracking-tight mb-20 text-gray-900 dark:text-gray-100"
    >
      Work with Me
    </h2>

    <div class="grid md:grid-cols-2 gap-16">
      <!-- Info column -->
      <div>
        <h3
          class="text-2xl font-bold tracking-tight text-gray-900 dark:text-gray-100 mb-8"
        >
          Let's create something amazing together
        </h3>
        <p class="text-gray-600 dark:text-gray-400 mb-12">
          I'm currently accepting select client projects, consulting
          opportunities, and speaking engagements. If you're looking for a
          technology leader with a proven track record in digital
          transformation, let's connect.
        </p>

        <div class="space-y-8">
          <div>
            <h4
              class="text-lg font-bold tracking-tight text-gray-900 dark:text-gray-100 mb-2"
            >
              Email
            </h4>
            <a
              href="mailto:hello@julianpineda.com"
              class="text-gray-600 dark:text-gray-400 hover:text-lime-400 dark:hover:text-purple-400 transition-colors"
              >hello@julianpineda.com</a
            >
          </div>

          <div>
            <h4
              class="text-lg font-bold tracking-tight text-gray-900 dark:text-gray-100 mb-2"
            >
              Location
            </h4>
            <p class="text-gray-600 dark:text-gray-400">
              Toronto, Canada<br />Available for remote work worldwide
            </p>
          </div>

          <div>
            <h4
              class="text-lg font-bold tracking-tight text-gray-900 dark:text-gray-100 mb-2"
            >
              Connect
            </h4>
            <div class="flex gap-4">
              <a
                href="https://linkedin.com/in/julianpinedayyz"
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-600 dark:text-gray-400 hover:text-lime-400 dark:hover:text-purple-400 transition-colors"
              >
                LinkedIn
              </a>
              <a
                href="https://twitter.com/julianpineda"
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-600 dark:text-gray-400 hover:text-lime-400 dark:hover:text-purple-400 transition-colors"
              >
                Twitter
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Booking column -->
      <div>
        <div
          class="bg-white dark:bg-charcoal-900 rounded-[4px] border border-gray-200 dark:border-gray-700 p-8"
        >
          <h3
            class="text-2xl font-bold tracking-tight text-gray-900 dark:text-gray-100 mb-8"
          >
            Book a consultation
          </h3>
          <p class="text-gray-600 dark:text-gray-400 mb-8">
            Schedule a 30-minute discovery call to discuss your project needs
            and explore how we might work together.
          </p>
          <a
            href="https://calendly.com/julianpineda/30min"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block w-full py-4 px-6 text-center bg-lime-400 dark:bg-purple-400 text-gray-900 dark:text-white rounded-[4px] font-medium hover:bg-lime-300 dark:hover:bg-purple-500 transition-colors"
          >
            Book a Call
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
