<section id="contact" class="py-24 bg-gray-50">
  <div class="site-container">
    <h2 class="text-4xl font-bold tracking-tight mb-20 text-gray-900">
      Let's Connect
    </h2>

    <div class="grid md:grid-cols-2 gap-12">
      <!-- Contact information -->
      <div>
        <h3 class="text-2xl font-bold tracking-tight text-gray-900 mb-8">
          Get in touch
        </h3>

        <p class="text-gray-600 mb-12">
          I'm always interested in new opportunities and collaborations. Whether
          you have a project in mind or just want to say hello, feel free to
          reach out.
        </p>

        <div class="space-y-8">
          <div>
            <h4 class="text-lg font-bold tracking-tight text-gray-900 mb-2">
              Email me at
            </h4>
            <a
              href="mailto:hello@example.com"
              class="text-gray-600 hover:text-lime-400 transition-colors"
            >
              hello@example.com
            </a>
          </div>

          <div>
            <h4 class="text-lg font-bold tracking-tight text-gray-900 mb-2">
              Based in
            </h4>
            <p class="text-gray-600">Toronto, Ontario, Canada</p>
          </div>

          <div>
            <h4 class="text-lg font-bold tracking-tight text-gray-900 mb-2">
              Follow me
            </h4>
            <div class="flex gap-4">
              <a
                href="#"
                class="text-gray-600 hover:text-lime-400 transition-colors"
              >
                LinkedIn
              </a>
              <a
                href="#"
                class="text-gray-600 hover:text-lime-400 transition-colors"
              >
                Twitter
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact form -->
      <div class="bg-white rounded-[4px] border border-gray-200 p-8">
        <h3 class="text-2xl font-bold tracking-tight text-gray-900 mb-8">
          Send me a message
        </h3>
        <p class="text-gray-600 mb-8">
          If you're interested in working together or have any questions, please
          fill out the form below.
        </p>

        <form>
          <div class="space-y-6">
            <!-- Form fields go here -->
            <button
              type="submit"
              class="inline-block w-full py-4 px-6 text-center bg-lime-400 text-gray-900 rounded-[4px] font-medium hover:bg-lime-300 transition-colors"
            >
              Send Message
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
