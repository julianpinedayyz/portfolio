<!-- Window size indicator -->
<div
  id="size-indicator"
  class="fixed bottom-4 right-4 bg-black text-white px-3 py-2 rounded-md text-sm z-50 opacity-70"
>
  Window size: <span id="width">-</span> x <span id="height">-</span>
</div>

<script is:inline>
  // Update the size indicator on load and resize
  function updateSizeIndicator() {
    document.getElementById('width').textContent = window.innerWidth;
    document.getElementById('height').textContent = window.innerHeight;
  }

  // Initialize size indicator
  window.addEventListener('DOMContentLoaded', updateSizeIndicator);
  window.addEventListener('resize', updateSizeIndicator);
</script>
