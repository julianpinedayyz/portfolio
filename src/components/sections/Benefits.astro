<section id="benefits" class="pb-12 bg-[#f9f9f9] py-16">
  <div class="site-container px-6 mx-auto max-w-6xl">
    {/* Main container: Use Flexbox for layout */}
    <div class="flex flex-col md:flex-row md:gap-8">
      {/* Column 1: Title - Width changes at md and lg breakpoints */}
      <div class="md:w-[280px] lg:w-[460px] md:flex-shrink-0 mb-8 md:mb-0">
        <h2 class="h2-heading text-[#333333]">Benefits</h2>
      </div>

      {/* Column 2: Card Grid - Takes remaining space above md */}
      <div class="md:flex-grow pt-2">
        {/* Card grid: 1 col <lg, 2 cols lg-xl, 3 cols xl+ */}
        <div
          class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6 lg:gap-y-8"
        >
          {
            benefits.map((benefit, index) => {
              const IconComponent = iconComponents[benefit.icon] || null;
              return (
                <div
                  class:list={[
                    'flex flex-col',
                    { 'xl:border-t xl:border-gray-200 xl:pt-8': index >= 3 },
                  ]}
                >
                  <div class="flex items-baseline mb-3 md:mb-8">
                    <span class="text-base mr-2 font-extralight italic text-[#333333] tracking-[-0.08em]">
                      {benefit.number}
                    </span>
                    <h3 class="text-base font-medium text-[#333333] leading-tight tracking-[-0.08em]">
                      {benefit.title}
                    </h3>
                    {IconComponent && (
                      <div class="h-5 w-5 ml-auto text-[#888888] relative top-[3px]">
                        <IconComponent aria-hidden="true" />
                      </div>
                    )}
                  </div>
                  <p class="text-sm text-[#666666]">{benefit.description}</p>
                </div>
              );
            })
          }
        </div>
      </div>
    </div>
  </div>
</section>
