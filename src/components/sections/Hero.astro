---
import ScramblingTextScript from '../scripts/ScramblingTextScript.astro';
---

<section
  id="hero"
  class="pt-[80px] pb-16 md:pt-[120px] md:pb-24"
  aria-labelledby="hero-title"
>
  <div class="site-container">
    <div class="max-w-4xl">
      <h1
        id="hero-title"
        class="font-bold tracking-tight leading-[1.1] text-gray-900"
      >
        <span
          class="text-[50px] sm:text-[65px] md:text-[100px] block font-extra-black tracking-tighter mb-2 sm:mb-2 leading-[1.1]"
          >Julian<br class="inline sm:hidden" /> Pineda</span
        >
        <span
          class="text-2xl sm:text-3xl md:text-7xl font-light tracking-tighter leading-tight relative"
        >
          <!-- Static text that's visible to screen readers but hidden for visual users after animation starts -->
          <span
            id="static-tagline"
            class="block transition-opacity duration-500"
          >
            Transformative leader in digital ecosystems and technology strategy.
          </span>

          <!-- Dynamic text positioned absolutely on top -->
          <span
            class="absolute top-0 left-0 w-full opacity-0 transition-opacity duration-500"
            id="dynamic-container"
          >
            <ScramblingTextScript
              id="hero-tagline"
              text="Transformative leader in digital ecosystems and technology strategy."
              delay={800}
              rotationDelay={10000}
            />
          </span>
        </span>
      </h1>
    </div>
  </div>
</section>

<!-- Decorative element with more obvious tech theme -->
<div class="py-16 overflow-hidden border-t border-gray-100" aria-hidden="true">
  <div class="site-container">
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 sm:gap-6">
      <div class="text-gray-700 text-xs font-mono text-center sm:text-left">
        Digital Strategy • Technology Leadership • AI
      </div>
      <div class="text-gray-500 text-xs text-center font-mono">
        Toronto, Canada
      </div>
      <div class="text-gray-700 text-xs text-center sm:text-right font-mono">
        Accessibility • Innovation • Digital Transformation
      </div>
    </div>
  </div>
</div>

<script>
  // Simple script to fade between static and dynamic text
  document.addEventListener('DOMContentLoaded', () => {
    const staticTagline = document.getElementById('static-tagline');
    const dynamicContainer = document.getElementById('dynamic-container');

    if (staticTagline && dynamicContainer) {
      // After a delay, start the transition
      setTimeout(() => {
        // For visual users, we'll hide the static text and show the animation
        staticTagline.classList.add('opacity-0');
        // The static text remains in the DOM for screen readers

        dynamicContainer.classList.remove('opacity-0');
        dynamicContainer.classList.add('opacity-100');
      }, 2000); // Wait 2 seconds before switching to dynamic content
    }
  });
</script>
