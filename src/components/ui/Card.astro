---
export interface Props {
  title?: string;
  class?: string;
  href?: string;
  target?: string;
  rel?: string;
  clickable?: boolean;
}

const {
  title,
  class: className = '',
  href,
  target,
  rel,
  clickable = false,
} = Astro.props;

const baseClasses = "bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden transition-all duration-300";
const clickableClasses = clickable ? "hover:shadow-lg cursor-pointer transform hover:-translate-y-1" : "";
const combinedClasses = `${baseClasses} ${clickableClasses} ${className}`;
---

{
  href ? (
    <a href={href} target={target} rel={rel} class={combinedClasses}>
      {title && <div class="p-4 font-bold text-lg text-gray-900 dark:text-white border-b border-gray-100 dark:border-gray-700">{title}</div>}
      <div class="p-4">
        <slot />
      </div>
      <slot name="footer" />
    </a>
  ) : (
    <div class={combinedClasses}>
      {title && <div class="p-4 font-bold text-lg text-gray-900 dark:text-white border-b border-gray-100 dark:border-gray-700">{title}</div>}
      <div class="p-4">
        <slot />
      </div>
      <slot name="footer" />
    </div>
  )
}