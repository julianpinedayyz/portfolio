---
const currentYear = new Date().getFullYear();
---

<footer
  class="py-12 border-t border-gray-100 dark:border-gray-800 bg-white dark:bg-charcoal-900"
>
  <div class="site-container">
    <div class="flex flex-col md:flex-row justify-between items-center gap-6">
      <div class="text-2xl font-medium text-gray-900 dark:text-gray-100">
        Julian Pineda
      </div>

      <div
        class="flex items-center gap-2 text-gray-500 dark:text-gray-400 text-sm"
      >
        <span>&copy; {currentYear}</span>
        <span>Worldwide â†’ Canada</span>
      </div>

      <div class="flex gap-6 items-center">
        <a
          href="https://twitter.com/julianpineda"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Twitter"
          class="text-gray-500 dark:text-gray-400 hover:text-lime-400 dark:hover:text-purple-400 transition-colors"
        >
          Twitter
        </a>

        <a
          href="https://linkedin.com/in/julianpinedayyz"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="LinkedIn"
          class="text-gray-500 dark:text-gray-400 hover:text-lime-400 dark:hover:text-purple-400 transition-colors"
        >
          LinkedIn
        </a>

        <a
          href="https://github.com/julianpineda"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="GitHub"
          class="text-gray-500 dark:text-gray-400 hover:text-lime-400 dark:hover:text-purple-400 transition-colors"
        >
          GitHub
        </a>
      </div>
    </div>
  </div>

  <!-- Theme toggle button -->
  <button
    id="theme-toggle"
    class="fixed bottom-6 left-6 p-3 bg-gray-900 dark:bg-purple-400 text-white rounded-[2px] shadow-lg transition-all duration-300 hover:bg-gray-800 dark:hover:bg-purple-500 focus:outline-none"
    aria-label="Toggle theme"
  >
    <!-- Sun icon for dark mode -->
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-5 w-5 dark:block hidden"
      viewBox="0 0 20 20"
      fill="currentColor"
    >
      <path
        fillRule="evenodd"
        d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
        clipRule="evenodd"></path>
    </svg>
    <!-- Moon icon for light mode -->
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-5 w-5 dark:hidden block"
      viewBox="0 0 20 20"
      fill="currentColor"
    >
      <path
        d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
      ></path>
    </svg>
  </button>

  <!-- Scroll to top button -->
  <button
    id="scroll-to-top"
    class="fixed bottom-6 right-6 p-3 bg-lime-400 dark:bg-purple-400 text-gray-900 dark:text-white rounded-[2px] shadow-lg opacity-0 invisible transition-all duration-300 hover:bg-lime-500 dark:hover:bg-purple-500 focus:outline-none"
    aria-label="Scroll to top"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="20"
      height="20"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path d="M12 19V5M5 12l7-7 7 7"></path>
    </svg>
  </button>
</footer>

<style>
  #scroll-to-top.visible {
    opacity: 1;
    visibility: visible;
  }
</style>

<script>
  // Theme toggle functionality
  const themeToggle = document.getElementById('theme-toggle');

  // Check for saved theme preference or use device preference
  const savedTheme = localStorage.getItem('theme');
  const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

  if (savedTheme === 'dark' || (!savedTheme && prefersDark)) {
    document.documentElement.classList.add('dark');
  }

  // Toggle theme
  themeToggle?.addEventListener('click', () => {
    document.documentElement.classList.toggle('dark');

    // Save preference
    if (document.documentElement.classList.contains('dark')) {
      localStorage.setItem('theme', 'dark');
    } else {
      localStorage.setItem('theme', 'light');
    }
  });
</script>
