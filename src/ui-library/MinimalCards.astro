---
// No props needed for static implementation
---

<section class="bg-[#fafafa]">
  <div class="site-container">
    <div class="grid grid-cols-4 gap-6">
      <!-- Dark card with Numeri -->
      <div class="col-span-2 bg-[#292929] h-[280px] pt-6 px-6 rounded-[24px]">
        <h2 class="text-4xl text-white leading-none mb-1 tracking-tighter">
          Numeri
        </h2>
        <p
          class="text-xl font-extralight text-[#F0F0F0] leading-none tracking-tighter"
        >
          I dati del Mauto
        </p>
      </div>

      <!-- Parco auto card -->
      <div class="bg-[#E8E8E8] h-[280px] rounded-[24px] flex flex-col p-6">
        <div class="flex items-center -tracking-[.4em]">
          <span class="text-7xl font-medium text-[#292929] leading-none"
            >150</span
          >
          <span
            class="text-7xl font-medium text-[#292929] leading-none relative -top-2 ml-1"
            >+</span
          >
        </div>
        <div class="mt-auto">
          <div class="border-t border-gray-300 pt-3">
            <h3 class="text-xl text-[#292929] leading-none tracking-tighter">
              Parco auto
            </h3>
            <p
              class="text-base font-extralight text-[#292929] leading-none tracking-tighter mt-0.5"
            >
              Vetture da tutto il mondo
            </p>
          </div>
        </div>
      </div>

      <!-- Case e designer card -->
      <div class="bg-[#F46665] h-[280px] rounded-[24px] flex flex-col p-6">
        <div class="flex items-center -tracking-[.4em]">
          <span class="text-7xl font-medium text-[#292929] leading-none"
            >80</span
          >
          <span
            class="text-7xl font-medium text-[#292929] leading-none relative -top-2 ml-1"
            >+</span
          >
        </div>
        <div class="mt-auto">
          <div class="border-t border-gray-800/20 pt-3">
            <h3 class="text-xl text-[#292929] leading-none tracking-tighter">
              Case e designer
            </h3>
            <p
              class="text-base font-extralight text-[#292929] leading-none tracking-tighter mt-0.5"
            >
              Stile, cultura e territorio
            </p>
          </div>
        </div>
      </div>

      <!-- Metri quadrati card -->
      <div
        class="col-span-2 bg-[#E8E8E8] h-[280px] rounded-[24px] flex flex-col p-6"
      >
        <span
          class="text-7xl font-medium text-[#292929] leading-none -tracking-[.1em]"
          >19K</span
        >
        <div class="mt-auto">
          <div class="border-t border-gray-300 pt-3">
            <h3 class="text-xl text-[#292929] leading-none tracking-tighter">
              Metri quadrati
            </h3>
            <p
              class="text-base font-extralight text-[#292929] leading-none tracking-tighter mt-0.5"
            >
              Nella scenografia firmata Fran√ßois Confino
            </p>
          </div>
        </div>
      </div>

      <!-- Anni di storia card -->
      <div
        class="col-span-2 bg-[#E8E8E8] h-[280px] rounded-[24px] flex flex-col p-6"
      >
        <div class="flex items-center -tracking-[.4em]">
          <span class="text-7xl font-medium text-[#292929] leading-none"
            >90</span
          >
          <span
            class="text-7xl font-medium text-[#292929] leading-none relative -top-2 ml-1"
            >+</span
          >
        </div>
        <div class="mt-auto">
          <div class="border-t border-gray-300 pt-3">
            <h3 class="text-xl text-[#292929] leading-none tracking-tighter">
              Anni di storia
            </h3>
            <p
              class="text-base font-extralight text-[#292929] leading-none tracking-tighter mt-0.5"
            >
              Una storia rivolta al futuro dell'automobile
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
