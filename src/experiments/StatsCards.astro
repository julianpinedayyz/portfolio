<section class="py-16 bg-[#262626]">
  <div class="site-container">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
      <!-- Card 1: Website Traffic (Top-Left) -->
      <div class="bg-[#F7F48B] rounded-2xl p-5 flex flex-col">
        <div class="flex justify-between items-center mb-3">
          <h3 class="text-xl font-semibold text-[#262626]">Users Reached</h3>
          <span class="text-gray-500 text-sm">More</span>
        </div>

        <div class="flex justify-center items-center my-3 relative">
          <div class="w-32 h-32 relative flex items-center justify-center">
            <!-- Donut chart background (gray) -->
            <div
              class="absolute inset-0 rounded-full border-[16px] border-gray-300 opacity-30"
            >
            </div>
            <!-- Donut chart filled part (black) -->
            <div
              class="absolute inset-0 rounded-full border-[16px] border-t-[#262626] border-r-[#262626] border-b-[#262626] border-l-transparent transform -rotate-45"
            >
            </div>
            <!-- Center value -->
            <span class="text-4xl font-bold text-[#262626]">5M+</span>
          </div>
        </div>

        <div class="mt-auto">
          <div class="flex justify-between items-center mb-2">
            <div class="flex items-center">
              <div class="w-4 h-4 bg-[#262626] mr-2"></div>
              <span class="text-sm text-[#262626]">Miroamarillo</span>
            </div>
            <span class="text-sm text-gray-500">56%</span>
          </div>
          <div class="flex justify-between items-center">
            <div class="flex items-center">
              <div class="w-4 h-4 bg-gray-300 mr-2"></div>
              <span class="text-sm text-[#262626]">RBC & Deloitte</span>
            </div>
            <span class="text-sm text-gray-500">44%</span>
          </div>
        </div>
      </div>

      <!-- Card 2: Full Report (Top-Middle) -->
      <div
        class="bg-[#313134] rounded-2xl p-5 flex flex-col relative overflow-hidden"
      >
        <!-- Background pattern -->
        <div class="absolute inset-0 opacity-10">
          <div class="grid grid-cols-6 gap-3 h-full w-full">
            {
              Array(36)
                .fill(0)
                .map(() => (
                  <div class="w-full h-full">
                    <div class="w-full h-full rounded-full border border-gray-400" />
                  </div>
                ))
            }
          </div>
        </div>

        <div class="flex justify-between items-center mb-8 relative z-10">
          <button
            class="px-3 py-1 border border-gray-400 rounded-full text-white text-sm"
          >
            Career Snapshot
          </button>
          <span class="text-white text-sm">/ 2023</span>
        </div>

        <div class="mt-auto relative z-10">
          <button
            class="w-full flex items-center justify-between border border-gray-400 rounded-lg overflow-hidden"
          >
            <span class="px-4 py-2 text-white">Download Resume</span>
            <div
              class="h-10 w-10 bg-[#313134] border-l border-gray-400 flex items-center justify-center"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4 text-white"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                ></path>
              </svg>
            </div>
          </button>
        </div>
      </div>

      <!-- Card 3: Bounce Rate (Top-Right) -->
      <div class="bg-[#E8E8E8] rounded-2xl p-5 flex flex-col">
        <div class="flex justify-between items-center mb-6">
          <h3 class="text-xl font-semibold text-[#262626]">Onboarding Time</h3>
          <button
            class="w-7 h-7 rounded-full bg-[#313134] flex items-center justify-center"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-3.5 w-3.5 text-white"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                clip-rule="evenodd"></path>
            </svg>
          </button>
        </div>

        <div class="flex justify-center gap-1 mb-6">
          <div class="px-3 py-1.5 rounded-lg text-center">
            <div class="text-gray-500 text-sm">Pre</div>
            <div class="text-gray-600 font-medium text-lg">100%</div>
          </div>
          <div class="px-3 py-1.5 rounded-lg bg-[#F7F48B] text-center">
            <div class="text-[#262626] text-sm">Post</div>
            <div class="text-[#262626] font-medium text-lg">50%</div>
          </div>
          <div class="px-3 py-1.5 rounded-lg text-center">
            <div class="text-gray-500 text-sm">Diff</div>
            <div class="text-gray-600 font-medium text-lg">-50%</div>
          </div>
        </div>

        <div class="flex justify-between items-end mt-auto">
          <div class="text-5xl font-bold text-[#262626]">50%</div>
          <div class="text-right">
            <div class="text-gray-600 font-medium">-50%</div>
            <div class="text-gray-500 text-sm">After implementation</div>
          </div>
        </div>
      </div>

      <!-- Card 4: ROI (Bottom-Left) -->
      <div class="bg-[#313134] rounded-2xl p-5 flex flex-col">
        <div class="flex justify-between items-center mb-3">
          <div class="flex items-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4 text-white mr-2"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"
              ></path>
            </svg>
            <h3 class="text-xl font-semibold text-white">Revenue Impact</h3>
          </div>
          <span class="text-gray-400 text-sm">Details</span>
        </div>

        <div class="my-3">
          <div class="text-4xl font-bold text-white">$10M+</div>
          <div class="text-gray-300 text-sm mt-1">New Annual Revenue</div>
        </div>

        <div class="mt-auto h-20 w-full relative">
          <!-- Line chart -->
          <svg
            class="w-full h-full"
            viewBox="0 0 300 100"
            preserveAspectRatio="none"
          >
            <!-- Light gray background lines -->
            <line
              x1="0"
              y1="20"
              x2="300"
              y2="20"
              stroke="#444"
              stroke-width="1"
              stroke-opacity="0.2"></line>
            <line
              x1="0"
              y1="40"
              x2="300"
              y2="40"
              stroke="#444"
              stroke-width="1"
              stroke-opacity="0.2"></line>
            <line
              x1="0"
              y1="60"
              x2="300"
              y2="60"
              stroke="#444"
              stroke-width="1"
              stroke-opacity="0.2"></line>
            <line
              x1="0"
              y1="80"
              x2="300"
              y2="80"
              stroke="#444"
              stroke-width="1"
              stroke-opacity="0.2"></line>

            <!-- Yellow line chart -->
            <path
              d="M0,80 C30,90 60,40 90,60 C120,80 150,50 180,30 C210,20 240,40 270,20 L270,20 L300,10"
              fill="none"
              stroke="#F7F48B"
              stroke-width="2"></path>

            <!-- Endpoint highlight -->
            <circle cx="300" cy="10" r="3" fill="#F7F48B"></circle>
          </svg>
        </div>
      </div>

      <!-- Card 5: Image Card (Bottom-Middle) -->
      <div
        class="bg-gray-300 rounded-2xl overflow-hidden flex flex-col relative"
      >
        <img
          src="https://images.unsplash.com/photo-1617042375876-a13e36732a04?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80"
          alt="Person wearing futuristic AR glasses"
          class="w-full h-full object-cover"
        />

        <div class="absolute bottom-5 w-full flex justify-center">
          <button
            class="px-4 py-1.5 bg-[#F7F48B] rounded-full text-[#262626] font-medium"
          >
            Web Score with AI
          </button>
        </div>
      </div>

      <!-- Card 6: Customer Churn Rate (Bottom-Right) -->
      <div class="bg-[#313134] rounded-2xl p-5 flex flex-col">
        <h3 class="text-xl font-semibold text-white mb-4">
          Customer Churn Rate
        </h3>

        <div class="flex-1 relative">
          <!-- Bar chart -->
          <div class="h-full flex items-end justify-between pt-6 relative">
            <!-- Y-axis label (15) -->
            <div class="absolute top-0 left-0 text-xs text-gray-400">15</div>
            <!-- Y-axis label (10) -->
            <div class="absolute top-1/3 left-0 text-xs text-gray-400">10</div>
            <!-- Y-axis label (5) -->
            <div class="absolute top-2/3 left-0 text-xs text-gray-400">5</div>
            <!-- Y-axis label (0) -->
            <div class="absolute bottom-0 left-0 text-xs text-gray-400">0</div>

            <!-- X-axis labels and bars -->
            <div class="w-full h-full flex justify-between items-end px-4">
              <!-- Bar 1 -->
              <div class="flex flex-col items-center">
                <div class="h-24 w-6 bg-gray-500 rounded-t"></div>
                <span class="text-xs text-gray-400 mt-1">50-100</span>
              </div>

              <!-- Bar 2 with tooltip -->
              <div class="flex flex-col items-center relative">
                <div
                  class="absolute -top-6 left-1/2 transform -translate-x-1/2 bg-[#C8BFE7] text-white text-xs px-2 py-0.5 rounded"
                >
                  12.8%
                </div>
                <div class="h-36 w-6 bg-[#F7F48B] rounded-t relative">
                  <!-- Yellow highlighted bar -->
                </div>
                <span class="text-xs text-gray-400 mt-1">100-250</span>
              </div>

              <!-- Bar 3 -->
              <div class="flex flex-col items-center">
                <div class="h-16 w-6 bg-gray-500 rounded-t"></div>
                <span class="text-xs text-gray-400 mt-1">250-500</span>
              </div>

              <!-- Bar 4 -->
              <div class="flex flex-col items-center">
                <div class="h-24 w-6 bg-gray-500 rounded-t"></div>
                <span class="text-xs text-gray-400 mt-1">>500</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
